<resources>
    <string name="app_name">BUBT Nexus</string>

    <!-- Rent Strings -->
    <string name="price_format">৳ %d</string>
    <string name="bed_bath_format">%d Bed • %d Bath</string>
    <string name="available_from">Available from: %s</string>

    <!-- Category Names -->
    <string name="category_room">Room</string>
    <string name="category_flat">Flat</string>
    <string name="category_single_bed">Single Bed</string>
    <string name="category_sublet">Sublet</string>

    <!-- Auth Button Style -->
    <style name="AuthButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <string name="select_department">Select Department</string>
    <string name="select_program">Select Program</string>
    <string name="select_semester">Select Semester</string>
    <string name="select_designation">Select Designation</string>

    <!-- Auth Text Input Style -->
    <style name="AuthTextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="hintTextColor">@color/text_hint</item>
    </style>
</resources>