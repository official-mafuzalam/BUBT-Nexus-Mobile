<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base App Theme -->
    <style name="AppTheme" parent="Theme.BUBTNexus">
        <!-- Inherits everything from Theme.BUBTNexus -->
    </style>

    <!-- Grid Button Style -->
    <style name="GridButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Grid Button Text Style for Dark Theme -->
    <style name="GridButtonText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary
        </item> <!-- This will use dark theme text color -->
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Welcome Text Style for Dark Theme -->
    <style name="WelcomeText">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="TextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">?attr/colorOutline</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>
</resources>