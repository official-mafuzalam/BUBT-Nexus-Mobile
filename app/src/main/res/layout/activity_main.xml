<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="32dp"
        android:paddingBottom="16dp">

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/tvWelcome"
            style="@style/WelcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="8dp"
            android:text="Welcome, User ðŸ‘‹" />

        <!-- Date -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:alpha="0.8"
            android:fontFamily="sans-serif"
            android:text="Monday, 15 January"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="14sp" />

        <!-- User Info (Student ID/Faculty Info) -->
        <TextView
            android:id="@+id/tvUserInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:alpha="0.9"
            android:fontFamily="sans-serif"
            android:text=""
            android:textColor="?attr/colorOnPrimary"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>
    <!-- Content Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/contentCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <!-- Wrap content in a layout with background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_top_rounded"
            android:orientation="vertical">
            <!-- Scrollable Content Area -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="16dp">

                        <!-- Search Bar -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/searchLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="24dp"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomEnd="24dp"
                            app:boxCornerRadiusBottomStart="24dp"
                            app:boxCornerRadiusTopEnd="24dp"
                            app:boxCornerRadiusTopStart="24dp"
                            app:startIconDrawable="@android:drawable/ic_menu_search"
                            app:startIconTint="?attr/colorOnSurfaceVariant">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etSearch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:hint="Search courses, assignments..."
                                android:textColor="?attr/colorOnSurface"
                                android:textColorHint="?attr/colorOnSurfaceVariant"
                                android:textSize="16sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Section Title for Students -->
                        <TextView
                            android:id="@+id/tvSectionTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Quick Access"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <!-- Grid Buttons (Student View) -->
                        <GridLayout
                            android:id="@+id/gridButtons"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="2"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingBottom="16dp"
                            android:rowCount="4"
                            android:visibility="visible">

                            <!-- Routine Button -->
                            <LinearLayout
                                android:id="@+id/btnRoutine"
                                style="@style/GridButton"
                                android:layout_row="0"
                                android:layout_column="0">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_calendar"
                                    app:tint="?attr/colorPrimary" />

                                <TextView
                                    android:id="@android:id/text1"
                                    style="@style/GridButtonText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="Routine" />

                            </LinearLayout>

                            <!-- Assignments Button -->
                            <LinearLayout
                                android:id="@+id/btnAssignments"
                                style="@style/GridButton"
                                android:layout_row="0"
                                android:layout_column="1">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/library_books"
                                    app:tint="?attr/colorPrimary" />

                                <TextView
                                    android:id="@android:id/text1"
                                    style="@style/GridButtonText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="Assignments" />

                            </LinearLayout>

                            <!-- Notices Button -->
                            <LinearLayout
                                android:id="@+id/btnNotices"
                                style="@style/GridButton"
                                android:layout_row="1"
                                android:layout_column="0">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_notifications"
                                    app:tint="?attr/colorPrimary" />

                                <TextView
                                    android:id="@android:id/text1"
                                    style="@style/GridButtonText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="Notices" />

                            </LinearLayout>

                            <!-- Community Button -->
                            <LinearLayout
                                android:id="@+id/btnCommunity"
                                style="@style/GridButton"
                                android:layout_row="1"
                                android:layout_column="1">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_people"
                                    app:tint="?attr/colorPrimary" />

                                <TextView
                                    android:id="@android:id/text1"
                                    style="@style/GridButtonText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="Community" />

                            </LinearLayout>

                            <!-- Events Button -->
                            <LinearLayout
                                android:id="@+id/btnEvents"
                                style="@style/GridButton"
                                android:layout_row="2"
                                android:layout_column="0">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_event"
                                    app:tint="?attr/colorPrimary" />

                                <TextView
                                    android:id="@android:id/text1"
                                    style="@style/GridButtonText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="Events" />

                            </LinearLayout>

                            <!-- Ride Sharing Button -->
                            <LinearLayout
                                android:id="@+id/btnRide"
                                style="@style/GridButton"
                                android:layout_row="2"
                                android:layout_column="1">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_bike"
                                    app:tint="?attr/colorPrimary" />

                                <TextView
                                    android:id="@android:id/text1"
                                    style="@style/GridButtonText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="Ride Sharing" />

                            </LinearLayout>

                            <!-- To-Let Button -->
                            <LinearLayout
                                android:id="@+id/btnToLet"
                                style="@style/GridButton"
                                android:layout_row="3"
                                android:layout_column="0">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_home_rent"
                                    app:tint="?attr/colorPrimary" />

                                <TextView
                                    android:id="@android:id/text1"
                                    style="@style/GridButtonText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="To-Let" />

                            </LinearLayout>

                        </GridLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        app:itemIconTint="@color/nav_color_state"
        app:itemTextColor="@color/nav_color_state"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>