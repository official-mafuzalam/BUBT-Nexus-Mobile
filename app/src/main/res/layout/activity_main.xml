<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_color"
    tools:context=".MainActivity">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="32dp"
        android:paddingBottom="16dp">

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, Rahat ðŸ‘‹"
            style="@style/WelcomeText"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="8dp"/>

        <!-- Date -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday, 15 January"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:alpha="0.8"
            android:layout_marginStart="24dp"
            android:fontFamily="sans-serif"/>

    </LinearLayout>

    <!-- Scrollable Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Content Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="32dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">

                    <!-- Search Bar -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/searchLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="24dp"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="24dp"
                        app:boxCornerRadiusBottomStart="24dp"
                        app:boxCornerRadiusTopEnd="24dp"
                        app:boxCornerRadiusTopStart="24dp"
                        app:startIconDrawable="@android:drawable/ic_menu_search"
                        app:startIconTint="@color/text_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etSearch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Search courses, assignments..."
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Section Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quick Access"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="24dp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Grid Buttons -->
                    <GridLayout
                        android:id="@+id/gridButtons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="3"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="16dp">

                        <!-- Routine Button -->
                        <LinearLayout
                            style="@style/GridButton"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:id="@+id/btnRoutine">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_calendar"
                                app:tint="@color/primary_color" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Routine"
                                style="@style/GridButtonText"
                                android:layout_marginTop="12dp"/>

                        </LinearLayout>

                        <!-- Assignments Button -->
                        <LinearLayout
                            style="@style/GridButton"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:id="@+id/btnAssignments">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/library_books"
                                app:tint="@color/primary_color"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Assignments"
                                style="@style/GridButtonText"
                                android:layout_marginTop="12dp"/>

                        </LinearLayout>

                        <!-- Notices Button -->
                        <LinearLayout
                            style="@style/GridButton"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:id="@+id/btnNotices">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_notifications"
                                app:tint="@color/primary_color"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Notices"
                                style="@style/GridButtonText"
                                android:layout_marginTop="12dp"/>

                        </LinearLayout>

                        <!-- Community Button -->
                        <LinearLayout
                            style="@style/GridButton"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:id="@+id/btnCommunity">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_people"
                                app:tint="@color/primary_color"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Community"
                                style="@style/GridButtonText"
                                android:layout_marginTop="12dp"/>

                        </LinearLayout>

                        <!-- Events Button -->
                        <LinearLayout
                            style="@style/GridButton"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:id="@+id/btnEvents">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_event"
                                app:tint="@color/primary_color"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Events"
                                style="@style/GridButtonText"
                                android:layout_marginTop="12dp"/>

                        </LinearLayout>

                        <!-- Profile Button -->
                        <LinearLayout
                            style="@style/GridButton"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:id="@+id/btnRide">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_bike"
                                app:tint="@color/primary_color"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ride Sharing"
                                style="@style/GridButtonText"
                                android:layout_marginTop="12dp"/>

                        </LinearLayout>

                    </GridLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/nav_color_state"
        app:itemTextColor="@color/nav_color_state"/>

</LinearLayout>